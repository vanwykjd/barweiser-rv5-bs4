<!-- registration -->

<div class='devise-form'>
    <%= form_tag signup_register_path do %>
      
      <%= hidden_field_tag(:plan, @plan_selected) %>
      
      <div class="form-group">
          <%= text_field_tag(:description, value = nil, options = { class: 'form-control', placeholder: "Company name", autofocus: true}) %>
      </div>

      <div class="form-group">
          <%= email_field_tag(:email, value = nil, options = { class: 'form-control', placeholder: "Email", autofocus: true }) %>
      </div>
  
      <div class="form-group">
          <%= password_field_tag(:password, value = nil, options = { class: 'form-control', placeholder: "Password", autofocus: true })  %>
      </div>
  
      <div class="form-group">
          <%= password_field_tag(:password_confirmation, value = nil, options = { class: 'form-control', placeholder: "Confirm password", autofocus: true }) %>
      </div>
  
      <div class="actions">
          <%= submit_tag "CONTINUE", class: 'btn sign-up-btn' %>
      </div>
  
    <% end %>
</div>